modules = ["nodejs-20"]

[nix]
channel = "stable-25_05"
packages = ["mongodb"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "MongoDB"

[[workflows.workflow]]
name = "Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install && cp .env.example .env && node server.js"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "MongoDB"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mkdir -p /tmp/mongodb/data && mongod --dbpath /tmp/mongodb/data --port 27017 --bind_ip 127.0.0.1"
waitForPort = 27017

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 5000
externalPort = 80
